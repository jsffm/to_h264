#set -x
#cd ../$dest


wd=$(pwd)
#$vdr --genindex="$wd"
$vdr --genindex="../$dest"

#ffmpeg -i 00001.ts 2>> $log
$ffmpeg -i ../$dest/00001.ts 2>> $log

/usr/bin/touch $videodir/.update

fi

