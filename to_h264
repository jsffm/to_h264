	fac3=$(ls $temp/*.ac3)
	f2ac3=""
	for i in $fac3
	do
	    f2ac3="$f2ac3 -i $i"
	    lang=$(echo $i | cut -d '-' -f 2 | cut -d '.' -f 1)
	    #l=$(file $i)
	    #echo "ac3=$l" >> $log
	    $ffmpeg -i $i 2> $t2
	    #cat $t2 >> $log
