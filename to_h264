	    echo $ffmpeg $opt >> $log
	    nice $ffmpeg $opt
	    #nice ffmpeg $opt 2>&1 | tee > $logf
	    $ffmpeg -i $o2 2> $t
	    grep "Duration:" $t >> $log
	    ;;
    esac
    done

